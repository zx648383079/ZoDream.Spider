<Window x:Class="ZoDream.Spider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZoDream.Spider"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Menu>
                <MenuItem Header="菜单">
                    <MenuItem Header="新建任务"/>
                    <MenuItem Header="打开任务"/>
                    <MenuItem Header="保存"/>
                    <MenuItem Header="另存为" />
                </MenuItem>
                <MenuItem Header="控制" >
                    <MenuItem Header="开始"/>
                    <MenuItem Header="暂停"/>
                    <MenuItem Header="停止"/>
                    <MenuItem Header="还原"/>
                </MenuItem>
                <MenuItem Header="关于">
                    <MenuItem Header="查看帮助"/>
                    <MenuItem Header="关于 ZoDream Spider"/>
                </MenuItem>
            </Menu>
        </Grid>
        <ListBox Grid.Row="1">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="任务">
                        <MenuItem Header="编辑" x:Name="EditTaskBtn" Click="EditTaskBtn_Click"/>
                        <MenuItem Header="打开" />
                        <MenuItem Header="保存" />
                    </MenuItem>
                    <MenuItem Header="添加网址" x:Name="AddUrlBtn" Click="AddUrlBtn_Click"/>
                    <MenuItem Header="删除">
                        <MenuItem Header="选中" />
                        <MenuItem Header="已完成" />
                        <MenuItem Header="全部" />
                    </MenuItem>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
        <TextBlock Grid.Row="2"/>
    </Grid>
</Window>
