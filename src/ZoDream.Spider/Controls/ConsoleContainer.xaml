<UserControl x:Class="ZoDream.Spider.Controls.ConsoleContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZoDream.Spider.Controls"
             mc:Ignorable="d" 
             Background="#f4f4f4"
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox x:Name="ContentTb" Foreground="{Binding ElementName=root,Path=Foreground}" 
             FontSize="{Binding ElementName=root,Path=FontSize}"
             Background="{Binding ElementName=root,Path=Background}" IsReadOnly="True"/>
</UserControl>
