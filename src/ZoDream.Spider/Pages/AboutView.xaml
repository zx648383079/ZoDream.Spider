<Window x:Class="ZoDream.Spider.Pages.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sctl="clr-namespace:ZoDream.Shared.Controls;assembly=ZoDream.Shared.Controls"
        xmlns:local="clr-namespace:ZoDream.Spider.Pages"
        mc:Ignorable="d"
        Title="关于" Height="250" Width="300" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Center">
            <TextBlock Text="ZoDream Spider" FontSize="30"/>
            <TextBlock Text="v1.0"/>
            <sctl:HyperlinkButton Content="Copyright © 2022 zodream.cn" 
                                             NavigateUri="https://github.com/zx648383079/ZoDream.Spider"
                                             HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
