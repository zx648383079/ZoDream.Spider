<Page
    x:Class="ZoDream.Spider.Pages.HostPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctl="clr-namespace:ZoDream.Spider.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZoDream.Spider.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sctl="clr-namespace:ZoDream.Shared.Controls;assembly=ZoDream.Shared.Controls"
    xmlns:vm="clr-namespace:ZoDream.Spider.ViewModels"
    x:Name="root"
    Title="域名映射"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:HostViewModel />
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <sctl:IconButton
                Command="{Binding BackCommand}"
                Icon="&#xE112;"
                Label="返回" />
            <sctl:IconButton
                Grid.Column="2"
                Command="{Binding AddCommand}"
                Icon="&#xE109;"
                Label="添加" />
        </Grid>
        <ListBox
            Grid.Row="1"
            HorizontalContentAlignment="Stretch"
            ItemsSource="{Binding HostItems}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Height="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="{Binding Host}" />
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="{Binding Ip}" />
                        <Button
                            Grid.Column="2"
                            Command="{Binding ElementName=root, Path=DataContext.DeleteCommand}"
                            CommandParameter="{Binding}"
                            Content="&#xE106;"
                            Style="{StaticResource ListIconBtn}"
                            ToolTip="删除" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ctl:ContentDialog
            Title="添加Host映射"
            Grid.RowSpan="2"
            IsOpen="{Binding DialogVisible}"
            PrimaryCommand="{Binding DialogConfirmCommand}"
            SubTitle="可以一次添加多个，一行代表一个，示例: IP空格HOST">
            <TextBox AcceptsReturn="True" Text="{Binding InputContent}" />
        </ctl:ContentDialog>
    </Grid>
</Page>
