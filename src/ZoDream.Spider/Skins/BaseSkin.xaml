<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="IconFontFamily">Segoe MDL2 Assets</FontFamily>
    <Style x:Key="IconBtn" TargetType="Button">
        <Setter Property="FontFamily" Value="{DynamicResource IconFontFamily}"/>
    </Style>
    <Style x:Key="TranIconBtn" TargetType="Button" BasedOn="{StaticResource IconBtn}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    <Style x:Key="CenterTb" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment"  Value="Center"/>
    </Style>
</ResourceDictionary>